{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "rootDir": "./src/",
        "outDir": "./out/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ],
} 